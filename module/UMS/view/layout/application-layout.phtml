        <script>
            // change user active role
            $(document).ready(function () {

                //css temporary change
                $('.submenu').css({
                    'border': '1px solid #333333',
                    'background': '#444444'
                });

                $('.role').on('click', function () {
                    var role = $(this);
                    var jsonRole = JSON.stringify({
                        'role': role.text().toLowerCase()
                    });

                    $.ajax({
                        url: '<?php echo $this->url('authorization/default', array('controller' => 'role', 'action' => 'changeActiveUserRole')); ?>',
                        type: 'POST',
                        dataType: 'json',
                        async: true,
                        data: jsonRole,
                        success: function (msg) {

                            // change role in menu
                            if (msg.success) {
                                var newActiveRole = role.text();
                                role.text($('.active-role').text());
                                $('.active-role').text(newActiveRole);
                            }

                            console.log(msg);

                        },
                        error: function (msg) {
                            console.log(msg);
                        }
                    });
                });
            });

        </script>
